@using OARSMVC.Models
@model OARSMVC.tblBooking
@{
    Layout = "~/Views/Shared/SearchLayout.cshtml";
}
@{
    ViewBag.Title = "ConfirmBooking";
}



<head>
    <style>
        th {
            background-color: white;
            font-size: 20px;
            color: black;
            text-align: center;
        }

        table {
            background-color: lightgray;
            font-family: 'Arial Rounded MT';
            border-radius: 13px;
            text-align: center;
        }
    </style>
</head>
<div>
    <div class="left">

        <img src="~/Images/logo.png" />
    </div>

</div>
<div>
    <h2 style="color:white;background-color:grey;height:50px;text-align:center;margin-top:30px;font-family:'Arial Rounded MT'">
        @*<span style="color:white;margin-top:10px"></span>*@
        <img src="~/Images/_plane.jpg" />
        <span>Booking Summary</span>
    </h2>
</div>
<table class="table">
    <tr>

        <th>Date Of Journey</th>
        <th> Booking Ticket Status</th>


    </tr>
    @*<tr>
            <th>Name</th>
            <th>Departure </th>
            <th>Destination</th>
        </tr>*@
</table>
<div class="jumbotron">
    <div class="container ">
        @*  <h3>Passenger Details</h3>*@

        <div class="form-group">


            <table>
                <tr>
                    <td>
                        @Html.Label("Name")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Guest.GuestName, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Departure")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.tblFlight.FlightOrigin, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Destination")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.tblFlight.FlightDestination, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Email")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Guest.GuestEmail, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Contact")
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Guest.GuestPhoneNo, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
            </table>

        </div>
    </div>
</div>

