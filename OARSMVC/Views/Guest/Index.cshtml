@using OARSMVC.Models
@model IEnumerable<OARSMVC.tblFlight>
@{
    Layout = "~/Views/Shared/_OARSLayout.cshtml";
}

    ViewBag.Title = "Index";
}
@{
    Passenger emp = new Passenger();
}

<head>
    <style>
        th {
            background-color: white;
            font-size: 20px;
            color: black;
            text-align: center;
        }

        table {
            background-color: lightgray;
            font-family: 'Arial Rounded MT';
            border-radius: 13px;
        }

        * {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 25.00%;
            padding: 5px;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>
</head>


<div>
    <div class="left">

        <img src="~/Images/logo.png" />
    </div>

</div>


@*<div class="glyphicon-phone">

    </div>*@
<br />
<br />

<div class="right">
    <table class="table">
        <tr>
            <th>Going From</th>
            <th>Going To</th>
            <th>Date Of Journey</th>
            <th>Seats</th>
            <th> </th>

        </tr>
        <tr>
            <td>@Html.DropDownList("FlightOrigin", ViewBag.FlightOrigin as SelectList, "From", htmlAttributes: new { @class = "form-control" })</td>
            <td>@Html.DropDownList("FlightDestination", ViewBag.FlightDestination as SelectList, "To", htmlAttributes: new { @class = "form-control" })</td>

            <td>
                @*@Html.EditorFor(model => obj.EnterDate, new { htmlAttributes = new { @class = "form-control" } })*@
                <form class="form-control" style="text-align:center; background-color:lightgray; border-color:lightgray ">
                    <input type="date" />
                </form>
            </td>
            <td>
                @Html.DropDownList("seats",
                        new SelectList(Enum.GetValues(typeof(GuestSeat))),
                        "Select No of seats",
                        new { @class = "form-control" })
            </td>
            <td>
                @*<input type="submit" value="search" class="btn btn-info " />*@
                <b style="text-align:center">  @Html.ActionLink("Search", "Search", null, new { @style = "background-color:dodgerblue; color:white", @class = "ui-button img-rounded form-control" }) </b>
            </td>
        </tr>

    </table>
</div>
<table class="table" style="text-align:center">
    <tr><th>Flight Number</th><th>Going From</th><th>Going To</th><th>Arrival Time</th><th>Destination Time</th><th>Available Seats</th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FlightNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightOrigin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightDestination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfSeats)
            </td>
        </tr>
    }
</table>
<br />
<br />
<br />
<p style="color:white; font-family:'Bell MT'; font-size:35px; text-align:center"><b>Most Visited Places</b></p>
