@using OARSMVC.Models;
@model tblBooking

@{
    ViewBag.Title = "TicketStatus";
}



@{ 
    Guest guest = new Guest();
    tblFlight flight = new tblFlight();
}

<head>
    <style>
        h3 {
            margin: 1em 0 0.5em 0;
            font-weight: 600;
            font-family: 'Titillium Web', sans-serif;
            position: relative;
            font-size: 36px;
            line-height: 40px;
            padding: 15px 15px 15px 15%;
            color: #355681;
            box-shadow: inset 0 0 0 1px rgba(53,86,129, 0.4), inset 0 0 5px rgba(53,86,129, 0.5), inset -285px 0 35px white;
            border-radius: 0 10px 0 10px;
            background: #fff url(../images/_plane.jpg) no-repeat center left;
        }
        table {
            border-collapse: collapse;
        }

        td {
            padding-top: .7em;
            padding-bottom: .7em;
           
        }


    </style>
</head>
<h3 style="text-align:left">TicketStatus</h3>
<div class="jumbotron">
    <div class="container">
        <div class="row">

            <div class="col-md-6 ">
                <table>
                    <tr>
                        <td>
                            <b>PNR Number:</b>
                           
                        </td>
                        <td>
                            @*@Html.DisplayFor("BookingPNR", ViewBag.PNR)*@
                        </td>

                    </tr>
                    <tr>
                        <td><b>From:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.tblFlight.FlightOrigin)</td>
                    </tr>
                    <tr>
                        <td><b>To:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.tblFlight.FlightDestination)</td>
                    </tr>
                    <tr>
                        <td><b>Number Of Seats:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.BookingRecord)</td>
                    </tr>
                    <tr>
                        <td><b>Departure Time:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.tblFlight.DestinationTime)</td>
                    </tr>
                 </table>
            </div>
            <div class="col-md-6 ">
                <table>
                    <tr>
                        <td><b>Date of Travel:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.DateOfJourney)</td>
                    </tr>
                    <tr>
                        <td><b>Total Fare:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.tblFlight.FareDetails)</td>
                    </tr>
                    <tr>
                        <td><b>Ticket Status:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.FlightStatus)</td>
                    </tr>
                    <tr>
                        <td><b>Flight Status:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.FlightStatus)</td>
                    </tr>
                    <tr>
                        <td><b>Arrival Time:</b></td>
                        <td>@Html.DisplayFor(modelItem => Model.tblFlight.ArrivalTime)</td>
                    </tr>
                </table>
            </div>

        </div>            
    </div>
</div>

